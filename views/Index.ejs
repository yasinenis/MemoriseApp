<%- include('partials/_header'); %>

<body class="inter-my">
    <%- include('partials/_navigation'); %>

    <div class="cover">
        <div class="container align-items-center">
            <div class="row mt-5 align-items-center justify-content-center">
                <div class="col-8 justify-content-center">
                    <h1 style="color: white;">Internalise Words</h1>
                    <p style="color: white;">Learn with <span class="text-decoration-underline">flashcards</span> and <span class="text-decoration-underline">write</span> exercises</p>
                </div>
                <div class="col-4 justify-content-center">
                    <img class="cover-img" src="/pictures/cover.png" alt="">
                </div>
                
                
            </div>
        </div>
    </div>
    <div class="container my-border">
        <div class="row offset-1">
            <div class="d-flex col-6 align-items-center">
                <i class="fa-solid fa-graduation-cap fa-3x d-flex align-items-center"></i>
                <h4 class=" ms-3 d-flex justify-content-center">Learn words and partice from any languages you want with flash cards.</h4>
            </div>
            <div class="col-3">
                <img src="/pictures/learn.png" alt="" style="width: 500px;">
            </div>
        </div>
    </div>
    <div class="container my-border">
        <div class="row offset-1">
            <div class="d-flex col-6 align-items-center">
                <i class="fa-solid fa-chart-line fa-3x d-flex align-items-center"></i>
                <h4 class=" ms-3 d-flex justify-content-center">Track your own progress with charts.</h4>
            </div>
            <div class="col-3">
                <img class="shadow rounded-1" src="/pictures/chart.png" alt="" style="width: 500px;">
            </div>
        </div>
    </div>
    <div class="container my-border">
        <div class="row offset-1">
            <div class="d-flex col-6 align-items-center">
                <i class="fa-solid fa-book-bookmark fa-3x d-flex align-items-center"></i>
                <h4 class=" ms-3 d-flex justify-content-center">Get flashcards in front of you according to your level.</h4>
            </div>
            <div class="col-3">
                <img class="me-3 shadow bg-white rounded-1" src="/pictures/levels3.png" alt="" style="width: 500px;">
            </div>
        </div>
    </div>
    <div class="container my-border">
        <div class="row offset-1">
            <div class="d-flex col-6 align-items-center">
                <i class="fa-solid fa-pen-nib fa-3x d-flex align-items-center"></i>
                <h4 class=" ms-3 d-flex justify-content-center">Internalise random words by practising them with writing exercises.</h4>
            </div>
            <div class="col-3">
                <img class="me-3 shadow bg-white rounded-1" src="/pictures/write.png" alt="" style="width: 500px;">
            </div>
        </div>
    </div>  

    <div class="container mb-5 p-5">
        <div class="row justify-content-center">
            <div class="col-4 d-flex justify-content-center">
                <% if(userIN) { %>
                <a href="/learn" class="start-btn btn btn-success btn-lg justify-content-center">Continue Journey</a> 
                <% } else { %>
                <a href="/register" class="start-btn btn btn-success btn-lg justify-content-center">Start Journey</a>
                <% } %>
            </div>
            
        </div>
    </div>

    <%- include('partials/_footer'); %>
</body>                
    