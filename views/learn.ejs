<%- include('partials/_header'); %>

<body class="inter-my">
    <%- include('partials/_navigation'); %>
    <div class="heigh d-flex align-items-center">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <div class="row justify-content-center">
                        <div class="col-6 d-flex flex-column justify-content-center bg-white word-card">
                            <div class="mt1">
                                <i id="category-icon" class="fa-solid fa-bookmark ms-3"></i><span id="category"></span>
                            </div>
                            <div class="word-card-in">
                                <div class="d-flex justify-content-center align-items-center word-card-word point-it word-front">
                                    <h2 class="quicksand-500" id="word"></h2>
                                </div>
                                <div class="d-flex d-none justify-content-center align-items-center word-card-word point-it word-back">
                                    <h2 class="quicksand-500" id="meaning"></h2>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-center justify-content-around">
                                <button id="forgotBtn" href="" class="btn word-btn"><i class="fa-solid fa-repeat"></i> Forgot</button>
                                <button id="rememberedBtn" class="btn word-btn"><i class="fa-solid fa-check"></i> Remembered</button>
                                <a id="refreshBtn" href="/learn" class="btn word-btn-after"><i class="fa-solid fa-arrows-rotate"></i> Refresh</a>
                                <a id="addWordsBtn" href="/words" class="btn word-btn-after"><i class="fa-solid fa-plus"></i> Add New Word</a>
                            </div>
                        </div>
                    </div>         
                </div>
            </div>
        </div>
    </div>

<%- include('partials/_footer'); %>
