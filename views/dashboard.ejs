<body class="inter-my">
    <%- include('partials/_navigation'); %>

    <div class="container mt-4 mb-4 border-start border-end min-heigh-vh">
        <div class="row mt-5 justify-content-center">
            <div class="col-6 d-flex flex-column justify-content-center">
                <h2 class="d-flex justify-content-center text-theme-1">Have a good work &nbsp; <span class="text-success">{ </span> <%= username %> <span class="text-success"> }</span> &nbsp !</h2>
